<?xml version="1.0"?>
<configuration>
  <appSettings>
    <add key="aspnet:UseTaskFriendlySynchronizationContext" value="true" />
  </appSettings>

  <system.web>
    <compilation debug="true" targetFramework="4.6.1" />
    <httpRuntime targetFramework="4.6.1"/>
  </system.web>

  <system.serviceModel>
    <client>
      <endpoint name="CharactersServiceEndpoint"
                address="http://charactersservice.azurewebsites.net/wcfcharactersservice.svc"
                binding="customBinding"
                bindingConfiguration="noKeepAliveHttpBinding"
                contract="CharactersService.Domain.ICharactersService" />    
      <endpoint name="CharactersServiceEndpoint2"
                binding="customBinding"
                bindingConfiguration="noKeepAliveHttpBinding"
                contract="CharactersService.Domain.ICharactersService" />    
    </client>

    <bindings>
      <basicHttpBinding>
        <binding name="httpsBindingWithCredentials" useDefaultWebProxy="false">
          <security mode="TransportWithMessageCredential">
            <message clientCredentialType="UserName"
                     algorithmSuite="Default" />
          </security>
        </binding>
        <binding name="httpsBinding">
          <security mode="Transport">
            <transport clientCredentialType="None"/>
          </security>
        </binding>
        <binding name="httpBinding">
          <security mode="None" />
        </binding>
      </basicHttpBinding>
      <customBinding>
        <!--Default timings: close, open, send = 1 min-->
        <binding name="noKeepAliveHttpBinding"
                 closeTimeout="00:01:00"
                 openTimeout="00:01:00"
                 sendTimeout="00:01:00">
          <textMessageEncoding/>
          <httpTransport allowCookies="false"
                         keepAliveEnabled="false" />
        </binding>
      </customBinding>
    </bindings>

    <serviceHostingEnvironment aspNetCompatibilityEnabled="true" multipleSiteBindingsEnabled="true" />
  </system.serviceModel>
  <system.webServer>
    <modules runAllManagedModulesForAllRequests="true"/>
    <directoryBrowse enabled="true"/>
  </system.webServer>
</configuration>
