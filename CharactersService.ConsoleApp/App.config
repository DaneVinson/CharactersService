<?xml version="1.0"?>
<configuration>
  <appSettings>
    <add key="aspnet:UseTaskFriendlySynchronizationContext" value="true" />
    <!--<add key="EndpointName" value="CustomBindingEndpoint" />-->
    <add key="EndpointName" value="BasicHttpBindingEndpoint" />
    <add key="token" value="" />
  </appSettings>

  <system.web>
    <compilation debug="true" targetFramework="4.6.1" />
    <httpRuntime targetFramework="4.6.1"/>
  </system.web>
  
  <system.serviceModel>
    <client>
      <endpoint name="CustomBindingEndpoint"  
                binding="customBinding"
                bindingConfiguration="customHttpsBindingWithCredentials"
                address="https://charactersservice.azurewebsites.net/wcfcharactersservice.svc"
                contract="CharactersService.Domain.ICharactersService" />
      <endpoint name="BasicHttpBindingEndpoint"
                binding="basicHttpBinding"
                bindingConfiguration="httpsBindingWithCredentials"
                address="https://charactersservice.azurewebsites.net/wcfcharactersservice.svc"
                contract="CharactersService.Domain.ICharactersService" />
    </client>

    <bindings>
      <basicHttpBinding>
        <binding name="httpsBindingWithCredentials">
          <security mode="TransportWithMessageCredential">
            <message clientCredentialType="UserName" algorithmSuite="Default" />
          </security>
        </binding>
        <binding name="httpsBinding">
          <security mode="Transport">
            <transport clientCredentialType="None"/>
          </security>
        </binding>
        <binding name="httpBinding">
          <security mode="None" />
        </binding>
      </basicHttpBinding>
      <customBinding>
        <binding name="customHttpsBindingWithCredentials" 
                 openTimeout="00:01:00" 
                 receiveTimeout="00:01:00" 
                 sendTimeout="00:01:00">
          <textMessageEncoding messageVersion="Soap11"/>
          <security authenticationMode="UserNameOverTransport" />
          <httpsTransport allowCookies="false" keepAliveEnabled="false" />
        </binding>
      </customBinding>
    </bindings>

    <serviceHostingEnvironment aspNetCompatibilityEnabled="true" multipleSiteBindingsEnabled="true" />
  </system.serviceModel>
  <system.webServer>
    <modules runAllManagedModulesForAllRequests="true"/>
    <directoryBrowse enabled="true"/>
  </system.webServer>
</configuration>
